{% extends('companyEmail/layout.html.twig') %}

{% block header %}
    {% if editmode %}
    <h2>Optional: Drag a Email Header here:</h2>
    {% endif %}
    {{ pimcore_areablock('emailHeader', {
        'allowed': ['email-header'],
        'limit': 1
    }) }}
{% endblock %}


{% block content %}
    <div id="content">
        {{ pimcore_areablock('emailContent', {
            'allowed': ['email-content'],
        }) }}
    </div>
{% endblock %}

{% block footer %}
    {% if editmode %}
        <h2>Optional: Drag a Email Footer here:</h2>
    {% endif %}
    {{ pimcore_areablock('emailFooter', {
        'allowed': ['email-footer'],
        'limit': 1
    }) }}
{% endblock %}